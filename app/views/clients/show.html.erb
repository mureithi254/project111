<div class="container">
  <p id="notice"><%= notice %></p>

   <div class="client-details">
    <p>
      <strong>Client Number: </strong>
        <%= @client.id %>
    </p>

    <p>
      <strong>Fname:</strong>
      <%= @client.fname %>
    </p>

    <p>
      <strong>Lname:</strong>
      <%= @client.lname %>
    </p>

    <p>
      <strong>Phone:</strong>
      <%= @client.phone %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @client.email %>
    </p>

    <p>
      <strong>Status:</strong>
      <%= @client.status %>
    </p>

    <p>
      <strong>Insurance:</strong>
      <%= @client.insurance %>
    </p>
   </div>
  <%= link_to 'Edit', edit_client_path(@client),:class => 'btn btn-default' %> |
  <%= link_to 'Back', clients_path,:class => 'btn btn-default' %>
</div>