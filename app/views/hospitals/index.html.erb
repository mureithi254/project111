<div class="container">
  <p id="notice"><%= notice %></p>

   <%= link_to  new_hospital_path,:class => 'btn btn-lg btn-success hospital-new'  do %>
      <span class="glyphicon glyphicon-plus"></span>Hospital
   <% end %>

  <h1>Member Hospitals</h1>

<div class="jumbotron">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Address</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @hospitals.each do |hospital| %>
        <tr>
          <td><%= hospital.address %></td>
          <td><%= hospital.latitude %></td>
          <td><%= hospital.longitude %></td>
          <td><%= hospital.name %></td>
          <td><%= hospital.phone %></td>
          <td><%= hospital.email %></td>
          <td><%= link_to 'Show', hospital ,:class => 'btn btn-success'%></td>
          <td><%= link_to 'Edit', edit_hospital_path(hospital),:class => 'btn btn-info' %></td>
          <td><%= link_to 'Destroy', hospital, method: :delete, data: { confirm: 'Are you sure?' },:class => 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

  <br>
  <%= link_to 'Back To DashBoard',admins_admin_menu_path,class: 'btn btn-default btn-small' %>

</div